{
    "openapi": "3.0.0",
    "info": {
        "title": "Mini Event Management API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api/v1"
        }
    ],
    "paths": {
        "/events": {
            "get": {
                "summary": "List events (upcoming by default)",
                "description": "List upcoming events",
                "operationId": "3befe2e8582683a8dc70f7b706a5a97d",
                "parameters": [
                    {
                        "name": "tz",
                        "in": "query",
                        "description": "IANA timezone (e.g., Asia/Kolkata)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-Timezone",
                        "in": "header",
                        "description": "IANA timezone header (same value as tz)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number (default 1)",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Items per page (default 10)",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "include_past",
                        "in": "query",
                        "description": "Include past events when set to 1",
                        "schema": {
                            "type": "integer",
                            "enum": [
                                0,
                                1
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/EventsResponse"
                                },
                                "example": {
                                    "data": [
                                        {
                                            "id": 1,
                                            "name": "Demo",
                                            "location": "BLR",
                                            "start_time": "2025-09-08T10:00:00+05:30",
                                            "end_time": "2025-09-08T11:00:00+05:30",
                                            "max_capacity": 50,
                                            "created_at": "2025-09-06T08:00:00Z",
                                            "updated_at": "2025-09-06T08:00:00Z"
                                        }
                                    ],
                                    "meta": {
                                        "current_page": 1,
                                        "per_page": 10,
                                        "total": 1,
                                        "last_page": 1
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create event",
                "description": "Create an event",
                "operationId": "1ed79d9ab6d41b87387cad6237213e5d",
                "parameters": [
                    {
                        "name": "tz",
                        "in": "query",
                        "description": "IANA timezone for interpreting input times",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-Timezone",
                        "in": "header",
                        "description": "IANA timezone header (same value as tz)",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/EventInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                },
                                "example": {
                                    "id": 2,
                                    "name": "Conference",
                                    "location": "Remote",
                                    "start_time": "2025-09-08T09:00:00+05:30",
                                    "end_time": "2025-09-08T10:00:00+05:30",
                                    "max_capacity": 100,
                                    "created_at": "2025-09-06T08:05:00Z",
                                    "updated_at": "2025-09-06T08:05:00Z"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/events/{id}": {
            "get": {
                "summary": "Get event",
                "description": "Show a single event",
                "operationId": "abf4f4bbfe75221b5bab720a701f17b8",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "tz",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-Timezone",
                        "in": "header",
                        "description": "IANA timezone header (same value as tz)",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update event",
                "description": "Update event",
                "operationId": "ca1f19a988fe9b1ee4af2f4ff3e724fe",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "tz",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-Timezone",
                        "in": "header",
                        "description": "IANA timezone header (same value as tz)",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/EventInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Event"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict: capacity below current attendees",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                },
                                "example": {
                                    "message": "Max capacity (30) cannot be less than current attendees (42)"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete event",
                "description": "Delete event",
                "operationId": "54be98df9381a8b89013d29e170a31fe",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "tz",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-Timezone",
                        "in": "header",
                        "description": "IANA timezone header (same value as tz)",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    }
                }
            }
        },
        "/events/{id}/attendees": {
            "get": {
                "summary": "List attendees",
                "description": "List attendees",
                "operationId": "bc31b76dbc5c04942bcf38e7478da9cc",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "tz",
                        "in": "query",
                        "description": "IANA timezone (affects event times elsewhere)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "X-Timezone",
                        "in": "header",
                        "description": "IANA timezone header (same value as tz)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Search by name or email (case-insensitive)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Sort order",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "created_at_desc",
                                "created_at_asc",
                                "name_asc",
                                "name_desc"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AttendeesResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/events/{id}/register": {
            "post": {
                "summary": "Register attendee",
                "description": "Register attendee",
                "operationId": "a5d40dda446717b3353446c2b166c02f",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "X-Timezone",
                        "in": "header",
                        "description": "IANA timezone header (optional)",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Alice"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "alice@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Attendee"
                                },
                                "example": {
                                    "id": 10,
                                    "event_id": 1,
                                    "name": "Alice",
                                    "email": "alice@example.com"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                },
                                "example": {
                                    "message": "Event is at full capacity"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Event": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Demo"
                    },
                    "location": {
                        "type": "string",
                        "example": "BLR",
                        "nullable": true
                    },
                    "start_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-08T10:00:00+05:30"
                    },
                    "end_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-08T11:00:00+05:30"
                    },
                    "max_capacity": {
                        "type": "integer",
                        "example": 50
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-06T08:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-06T08:00:00Z"
                    }
                },
                "type": "object"
            },
            "EventInput": {
                "required": [
                    "name",
                    "start_time",
                    "end_time",
                    "max_capacity"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Demo"
                    },
                    "location": {
                        "type": "string",
                        "example": "BLR"
                    },
                    "start_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-08T10:00:00"
                    },
                    "end_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-08T11:00:00"
                    },
                    "max_capacity": {
                        "type": "integer",
                        "example": 50
                    }
                },
                "type": "object"
            },
            "Attendee": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 10
                    },
                    "event_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Alice"
                    },
                    "email": {
                        "type": "string",
                        "example": "alice@example.com"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "PaginationMeta": {
                "properties": {
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "per_page": {
                        "type": "integer",
                        "example": 10
                    },
                    "total": {
                        "type": "integer",
                        "example": 42
                    },
                    "last_page": {
                        "type": "integer",
                        "example": 5
                    }
                },
                "type": "object"
            },
            "EventsResponse": {
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Event"
                        }
                    },
                    "meta": {
                        "$ref": "#/components/schemas/PaginationMeta"
                    }
                },
                "type": "object"
            },
            "AttendeesResponse": {
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Attendee"
                        }
                    },
                    "meta": {
                        "$ref": "#/components/schemas/PaginationMeta"
                    }
                },
                "type": "object"
            },
            "ErrorResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Event is at full capacity"
                    }
                },
                "type": "object"
            }
        }
    }
}